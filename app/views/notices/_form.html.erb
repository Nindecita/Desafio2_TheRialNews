<%= form_with(model: notice) do |form| %>
  <% if notice.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(notice.errors.count, "error") %> Prohibido guardar este aviso:</h2>
      <ul>
        <% notice.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="text-info">
    <%= form.label :Título, style: "display: block" %>
    <%= form.text_field :title %>
  </div>
  <div class="text-info">
    <%= form.label :Descripción, style: "display: block" %>
    <%= form.text_field :description %>
  </div>
  <div class="text-info">
    <%= form.label :Imagen, style: "display: block" %>
    <%= form.text_field :image %>
  </div>
  <div>
    <%= form.submit "Editar noticia" %>
  </div>
<% end %>
