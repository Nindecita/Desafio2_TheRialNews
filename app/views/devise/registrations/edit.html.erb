<h2>Editar <%= resource_name.to_s.humanize %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Actualmente esperando confirmación para: <%= resource.unconfirmed_email %></div>
  <% end %>
  <div class="field">
    <%= f.label :Contraseña %> <i>(Déjalo en blanco si no quieres cambiarlo)</i><br />
    <%= f.password_field :password, autocomplete: "nueva contraseña" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> Carácteres mínimo</em>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :Confirma_la_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "nueva contraseña" %>
  </div>
  <div class="field">
    <%= f.label :Contraseña actual %> <i>(Necesitamos su contraseña actual para confirmar sus cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "Contraseña actual" %>
  </div>
  <div class="actions">
    <%= f.submit "Actualizar" %>
  </div>
<% end %>
<h3>Cancelar mi cuenta</h3>
<div>¿Infeliz? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Estas seguro", turbo_confirm: "Estas seguro" }, method: :delete %></div>
<%= link_to "Atrás", :back %>
