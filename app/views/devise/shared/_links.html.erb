<%- if controller_name != 'Sesiones' %>
  <%= link_to "Log in", new_session_path(resource_name), :class =>"link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %><br />
<% end %>
<%- if devise_mapping.registerable? && controller_name != 'Registros' %>
  <%= link_to "Sign up", new_registration_path(resource_name), :class =>"link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %><br />
<% end %>
<%- if devise_mapping.recoverable? && controller_name != 'Contraseñas' && controller_name != 'Registros' %>
  <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), :class =>"link-info link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %><br />
<% end %>
<%- if devise_mapping.confirmable? && controller_name != 'Confirmaciones' %>
  <%= link_to "¿No recibió las instrucciones de confirmación?", new_confirmation_path(resource_name) %><br />
<% end %>
<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'Desbloquea' %>
  <%= link_to "¿No recibiste instrucciones de desbloqueo?", new_unlock_path(resource_name) %><br />
<% end %>
<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Inicia sesión con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
  <% end %>
<% end %>
